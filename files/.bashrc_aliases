#########################################
# Functions
#########################################
tail-sns ()
{
	tail -F $1 | awk -v VAR=$2 '
	{
		col=""
		res="\033[39m"
		if ( $0 ~ /\{DBG/ )
		{ 
			col="\033[0;32m"
			$0 = sprintf("%s%s%s",col,$0,res)
		}
		else if ( $0 ~ /\{INF/ )
	   	{ 
			col="\033[1;33m"
			$0 = sprintf("%s%s%s",col,$0,res)
	   	}
		#else
		#	print $0

		if ( $0 ~ VAR )
		{
		   	l=$0
			sub(VAR, "\033[0;31m&"col, $l)
			$0 = $l 
		} 

		print $0
	}'
	#tail -f $1 | awk  '
	#$0~/App/   {print "\033[31m" $0 "\033[39m"}
	#/\{DBG/ {line="\033[32m" $0 "\033[39m"} 
	#/\{INF/ {print "\033[33m" $0 "\033[39m"}
	#1' 
   #	| awk '$0 ~ /ttt/ {print "test"} 1'
	# | awk -v VAR=$2 '$0~VAR   {print "\033[31m" $0 "\033[39m"}'
}
