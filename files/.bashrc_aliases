#########################################
# Functions
#########################################
tail-sns ()
{
	tail -F $1 | awk '
	{
		if ( $0 ~ /(App)/ ) { sub(/App/, "\033[0;31mApp\033[39m", $0) } 
		if ( $0 ~ /\{DBG/ ) { print "\033[0;32m" $0 "\033[39m" }
		else if ( $0 ~ /\{INF/ ) { print "\033[1;33m" $0 "\033[39m" }
		else
			print $0
	}'
	#tail -f $1 | awk  '
	#$0~/App/   {print "\033[31m" $0 "\033[39m"}
	#/\{DBG/ {line="\033[32m" $0 "\033[39m"} 
	#/\{INF/ {print "\033[33m" $0 "\033[39m"}
	#1' 
   #	| awk '$0 ~ /ttt/ {print "test"} 1'
	# | awk -v VAR=$2 '$0~VAR   {print "\033[31m" $0 "\033[39m"}'
}
