#########################################
# Functions
#########################################


tail-sns ()
{
	tail -F $1 | awk -v VAR=$2 '
	{
		col=""
		res="\033[39m"
		if ( $0 ~ /\{DBG/ )
		{ 
			col="\033[0;32m"
			$0 = sprintf("%s%s%s",col,$0,res)
		}
		else if ( $0 ~ /\{INF/ )
	   	{ 
			col="\033[1;33m"
			$0 = sprintf("%s%s%s",col,$0,res)
	   	}
		else if ( $0 ~ /\{WRN/ )
	   	{ 
			col="\033[1;35m"
			$0 = sprintf("%s%s%s",col,$0,res)
	   	}
		else if ( $0 ~ /\{ERR/ )
	   	{ 
			col="\033[1;31m"
			$0 = sprintf("%s%s%s",col,$0,res)
	   	}

		if ( $0 ~ VAR )
		{
		   	line=$0
			sub(VAR, "\033[0;36m&"col, line)
			$0 = line 
		} 

		print $0
	}'
}
