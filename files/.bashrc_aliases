#########################################
# Functions
#########################################
tail-sns ()
{
	
	tail -f $1 | awk  '
	$0~VAR   {print "\033[31m" $0 "\033[39m"}
	/\{DBG/ {print "\033[32m" $0 "\033[39m"} 
	/\{INF/ {print "\033[33m" $0 "\033[39m"}
	'
	# | awk -v VAR=$2 '$0~VAR   {print "\033[31m" $0 "\033[39m"}'
}
